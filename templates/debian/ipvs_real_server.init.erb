#
### BEGIN INIT INFO
# Provides:          ipvs_real_server
# Required-Start:    
# Required-Stop:     
# Should-Start:      
# Should-Stop:       
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# Short-Description: Start and stop the mysql database server daemon
# Description:       Controls ipvs real server. (using IPVS-DSR)
#                   
### END INIT INFO

. /lib/lsb/init-functions

RETVAL=0

ALIAS_NUM=<%= octet_id %>
VIRTUAL_IP=<%= virtual_server_ip %>

PROG="ipvs_real_server_${ALIAS_NUM}"
DESC="IPVS Real Server Node ${ALIAS_NUM}"

LOCK=/var/lock/$PROG


start(){
  echo -n "Starting ${DESC}: "
  if [ ! -f $LOCK ]; then
    /sbin/ip addr add $VIRTUAL_IP/32 dev lo label lo:$ALIAS_NUM brd $VIRTUAL_IP
    /sbin/ip route add $VIRTUAL_IP/32 dev lo:$ALIAS_NUM
    [ $RETVAL -eq 0 ] && touch $LOCK
  else
    echo "ipvs virtual ip is already added. Do nothing."    
  fi

}

stop(){
  echo -n "Stopping ${DESC}: "
  if [ -f $LOCK ]; then
    /sbin/ip addr del $VIRTUAL_IP/32 dev lo label lo:$ALIAS_NUM brd $VIRTUAL_IP
    /sbin/ip route del $VIRTUAL_IP/32 dev lo:$ALIAS_NUM
    [ $RETVAL -eq 0 ] && rm -f $LOCK
  else
    echo "ipvs virtual ip is not existed. Do nothing."    
  fi

}

case "$1" in
  start)
    start
    ;;
  stop)
    stop
    ;;
  *)
    echo "Usage: $0 {start|stop}"
    exit 1
esac